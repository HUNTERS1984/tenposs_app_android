<?xml version="1.0" encoding="utf-8"?>
<jp.tenposs.view.ProductTitle xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_category_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category_text"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/description_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/product_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="Â¥ 1200"
            android:textColor="@android:color/holo_red_light" />

    </LinearLayout>
</jp.tenposs.view.ProductTitle>