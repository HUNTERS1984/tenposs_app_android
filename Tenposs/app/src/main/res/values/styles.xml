<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorNavItem</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorNavItem</item>
        <item name="colorPrimary">@color/colorNavBackground</item>
        <item name="colorPrimaryDark">@color/colorNavItem</item>
        <item name="colorAccent">@color/colorNavSubTextColor</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="fill_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="AspectRatioImageView">
        <attr name="image_aspect_ratio" format="float" />
        <attr name="image_dimension_to_adjust" format="integer" />

    </declare-styleable>
    <declare-styleable name="AspectRatioLayout">
        <attr name="aspect_ratio" format="float" />

    </declare-styleable>


</resources>
